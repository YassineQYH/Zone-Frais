{% extends 'base.html.twig' %}
{% block title %}Mon panier{% endblock %}

{% block menu %}
    {{ include('partials/menu2.html.twig') }}
{% endblock %}


{% block content %}
    <div class="container">
        <h1>Mon panier</h1>
            Retrouvez l'ensemble des produits que vous avez ajouté à votre panier.

            {% if cart|length > 0 %}
                <table class="table table-striped mt-3">
                    <thead class="thead-dark">
                        <tr>
                        <th scope="col">Produit</th>
                        <th scope="col"></th>
                        <th scope="col">Quantité</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Total</th>
                        <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% set total = null %}
                        {% for item in cart %}
                            {# {{ dump(product) }} #}
                            <tr>
                                {# <th>
                                    <img src="/uploads/{{ item.product.illustration }}" alt="{{ item.product.name }}" height="75px"></br>
                                </th> #}
                                <td>
                                {{ item.product.name }} - {# {{ item.product.weight.nakgme }} #}</br>
                                <small>{{ item.product.description }}</small>
                                </td>
                                <td>
                                    <a href="{{ path('decrease_to_cart', {'id' : item.product.id }) }}">
                                        <img src="{{ asset('assets/img/less.png') }}" height="12px" alt="Retirer un produit">
                                    </a>
                                    x {{ item.quantity }}
                                    <a href="{{ path('add_to_cart', {'id' : item.product.id }) }}">
                                        <img src="{{ asset('assets/img/more.png') }}" height="12px" alt="Ajouter un produit">
                                    </a>
                                </td>
                                <td>{{ (item.product.price / 100)|number_format(2, ',','.') }} €</td>
                                <td>{{ ((item.product.price * item.quantity) / 100)|number_format(2, ',','.') }} €</td>
                                <td>
                                <a href="{{ path('delete_to_cart', {'id' : item.product.id }) }}">
                                    <img src="{{ asset('assets/img/delete.png') }}" height="18px" alt="Supprimer mon produit"></td>
                                </a>
                            </tr>
                            {% set total = total + (item.product.price * item.quantity) %}
                        {% endfor %}
                    </tbody>
                </table>
                <div class="text-right mb-5">
                    <b>Nombre de produits :</b> {{ cart|length }}</br>
                    <b>Total de mon panier :</b> {{ (total / 100)|number_format(2, ',','.') }} € 
                    <a href="{{ path('order') }}" class="btn btn-success btn-block">Valider mon panier</a>
                </div>
            {% else %}
            <hr>
            <p><b>Votre panier est vide.</b></p>
            {% endif %}
    </div>
{% endblock %}
